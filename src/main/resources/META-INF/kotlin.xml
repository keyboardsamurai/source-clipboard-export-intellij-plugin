<idea-plugin>
    <!-- Register Kotlin-specific service only when Kotlin plugin is present -->
    <applicationService
            serviceInterface="com.keyboardsamurais.intellij.plugin.sourceclipboardexport.util.kotlin.KotlinImportResolver"
            serviceImplementation="com.keyboardsamurais.intellij.plugin.sourceclipboardexport.util.kotlin.KotlinImportResolverImpl"/>

    <!-- Declare Kotlin plugin compatibility mode (required since IntelliJ 2024.2.1) -->
    <extensions defaultExtensionNs="org.jetbrains.kotlin">
        <supportsKotlinPluginMode supportsK2="true"/>
    </extensions>
</idea-plugin>

